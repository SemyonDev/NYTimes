<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appWhite"
    android:padding="@dimen/default_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_detail_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/fragment_detail_title_txt"
        android:layout_marginTop="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_detail_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@+id/fragment_detail_img"
        app:layout_constraintTop_toTopOf="@+id/fragment_detail_img"
        tools:text="Title" />

    <TextView
        android:id="@+id/fragment_detail_title_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@+id/fragment_detail_img"
        app:layout_constraintTop_toBottomOf="@+id/fragment_detail_title_txt"
        tools:text="Description" />

    <TextView
        android:id="@+id/fragment_detail_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintStart_toEndOf="@+id/fragment_detail_img"
        app:layout_constraintTop_toBottomOf="@+id/fragment_detail_title_desc"
        tools:text="Description" />
</androidx.constraintlayout.widget.ConstraintLayout>